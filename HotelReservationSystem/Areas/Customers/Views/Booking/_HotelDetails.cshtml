@model IPagedList<HotelReservationSystem.Areas.Customers.Models.AvilableHotel>

<div class="table-responsive">
    <div class="pagedList" data-hotel-target="#Listingtable">
        @Html.PagedListPager(Model, page => Url.Action("GetHotels", "Booking", new { area = "Customers", page }), PagedListRenderOptions.Classic)
    </div>
        <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().HotelID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().HotelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().AcRooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().NonAcRooms)
            </th>
            <th>

            </th>

        </tr>

        @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.HiddenFor(modelItem => item.HotelID)
                    @Html.DisplayFor(modelItem => item.HotelID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcRooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NonAcRooms)
                </td>
                <td>
                    @Html.ActionLink("Book", "BookingDetails", "Booking", new { area="Customers" , hotelID =@item.HotelID},new { @class="btn btn-primary" })

                </td>

            </tr>
    }

    </table>

</div>